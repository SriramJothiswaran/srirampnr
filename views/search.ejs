<script>
    $(function() {
        var $trainno = $('#trainno');
        $('#trainstatus').on('click', function () {
            var data = {
                trainno: $trainno.val()

            };
            $.ajax({
                type: 'POST',
                url: '/trainstatus',
                data: data,
                success: function (response) {
                    $('#trainstatus').prop('disabled', false);


                },
                error: function () {
                    alert('Error occurred while adding new buses! Try again later');
                }
            });

        });
    });

</script>
